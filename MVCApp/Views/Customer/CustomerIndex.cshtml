
@{
    ViewData["Title"] = "Home Page";
}

@{
    var savingAccount = ViewBag.SavingAccount;
    var currentAccount = ViewBag.CurrentAccount;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="p-4 shadow-lg rounded bg-light">
                <h2 class="text-primary mb-3">Your Account Information</h2>

                <div class="row">
                    <div class="col-md-6">
                        <div class="p-4 shadow-sm rounded">
                            @if (savingAccount != null)
                            {
                                <h3>Saving Account</h3>
                                <p>Account Number: @savingAccount.AccountNumber</p>
                                <p>Balance:€ @savingAccount.Balance.ToString("F2")</p>
                            }
                            else
                            {
                                <p>You don't have a saving account</p>
                            }
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-4 shadow-sm rounded">
                            @if (currentAccount != null)
                            {
                                <h3>Current Account</h3>
                                <p>Account Number: @currentAccount.AccountNumber</p>
                                <p>Balance:€ @currentAccount.Balance.ToString("F2")</p>
                            }
                            else
                            {
                                <p>You don't have a current account</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="@Url.Action("ManageTransaction", "BankCustomer")" class="btn btn-primary">
                        Manage Transaction
                    </a>
                    <a href="@Url.Action("GetUsersTransactions", "BankCustomer")" class="btn btn-primary">
                        See Transactions
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
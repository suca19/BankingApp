<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="p-4 shadow-lg rounded bg-light">
                <h2 class="text-primary mb-3">All Transactions</h2>

                <table class="table table-striped table-bordered table-hover table-responsive table-sm">
                    <thead>
                    <tr>
                        <th scope="col">Transaction ID</th>
                        <th scope="col">Account Number</th>
                        <th scope="col">Transaction Type</th>
                        <th scope="col">Transaction Date</th>
                        <th scope="col">Created By</th>
                        <th scope="col">Balance After Transaction</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Account Type</th>
                        <th scope="col">User Email</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var transaction in ViewBag.Transactions)
                    {
                        <tr>
                            <td>@transaction.TransactionId</td>
                            <td>@transaction.AccountNumber</td>
                            <td>@transaction.TransactionType</td>
                            <td>@transaction.TransactionDate</td>
                            <td>@transaction.CreatedBy</td>
                            <td>€ @transaction.BalanceAfterTransaction.ToString("F2")</td>
                            <td>€ @transaction.Amount.ToString("F2")</td>
                            <td>@transaction.AccountType</td>
                            <td>@transaction.UserEmail</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>